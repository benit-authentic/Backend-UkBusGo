# ====================================
# UK Bus GO Backend - Environment Variables
# ====================================

# ----------------
# Serveur
# ----------------
PORT=5000
NODE_ENV=development

# Configuration proxy (Railway, Render, etc.)
# ⚠️ IMPORTANT: Railway nécessite trust proxy pour éviter l'erreur ERR_ERL_UNEXPECTED_X_FORWARDED_FOR
TRUST_PROXY=true
DEBUG=false

# ----------------
# Base de données
# ----------------
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/bus-tickets

# MongoDB Atlas (Production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bus-tickets?retryWrites=true&w=majority

# ----------------
# JWT Authentication
# ----------------
# IMPORTANT: Changez ces secrets en production !
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_minimum_32_characters

# Durées des tokens
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=365d

# ----------------
# PayGate API (Paiement Mobile - ANCIEN)
# ----------------
PAYGATE_API_KEY=your_paygate_api_key_here
PAYGATE_BASE_URL=https://api.paygate.tg

# Test PayGate
# PAYGATE_BASE_URL=https://sandbox.paygate.tg

# ----------------
# FedaPay API (Paiement Mobile - NOUVEAU)
# ----------------
# Clés FedaPay (récupérées du dashboard FedaPay)
FEDAPAY_API_KEY=sk_sandbox_ILJZ8BkLdyUilxRB8FMG66cR
FEDAPAY_PUBLIC_KEY=pk_sandbox_AwJipFnOfIlJkJ6ppa4Wk9ib

# Environnement FedaPay ('sandbox' pour test, 'live' pour production)
FEDAPAY_ENVIRONMENT=sandbox

# URL de votre webhook pour recevoir les notifications FedaPay
WEBHOOK_URL=https://votre-domaine.com/api/fedapay/webhook

# Clé secrète du webhook FedaPay (à récupérer depuis le dashboard)
FEDAPAY_WEBHOOK_SECRET=wh_sandbox_your_webhook_secret_here

# Production FedaPay
# FEDAPAY_API_KEY=sk_live_your_live_secret_key
# FEDAPAY_PUBLIC_KEY=pk_live_your_live_public_key
# FEDAPAY_ENVIRONMENT=live
# FEDAPAY_WEBHOOK_SECRET=wh_live_your_live_webhook_secret

# ----------------
# CORS & Sécurité
# ----------------
# Origines autorisées (séparées par virgules)
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Production
# CORS_ORIGIN=https://yourapp.com,https://admin.yourapp.com

# ----------------
# Rate Limiting
# ----------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------
# Logging
# ----------------
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ----------------
# Email (Optionnel)
# ----------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ----------------
# Monitoring (Optionnel)
# ----------------
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ----------------
# PayGate Webhook (ANCIEN)
# ----------------
PAYGATE_WEBHOOK_SECRET=your_webhook_secret_here

# ----------------
# Webhooks sont maintenant gérés dans la section FedaPay ci-dessus
# ----------------

# ----------------
# Frontend URLs
# ----------------
FRONTEND_URL=http://localhost:3000
ADMIN_PANEL_URL=http://localhost:3001

# ----------------
# Développement uniquement
# ----------------
# Seeder la base de données au démarrage
SEED_DATABASE=true

# Activer les logs détaillés
DEBUG_MODE=true
